{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch kubectl",
      "detail": "Watch kubernetes resources",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "scripts/kubectl-watch.sh",
      "args": [
        "${input:resources}"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "eye"
      },
    },
    {
      "label": "Drop EKS cluster config",
      "detail": "Remove AWS EKS cluster from local kube config",
      "type": "shell",
      "command": "scripts/kubectl-drop-config.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "remove",
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "Push EKS cluster config",
      "detail": "Add AWS EKS cluster to local kube config",
      "type": "shell",
      "command": "scripts/kubectl-push-config.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "edit",
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "Run tests on AWS",
      "detail": "Run tests using TerraTest on AWS",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "scripts/run-tests.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiGreen"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "terraform destroy",
      "detail": "Destroy the resources managed by this repo",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "destroy"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "icon": {
        "id": "debug-stop",
        "color": "terminal.ansiRed"
      }
    },
    {
      "label": "terraform apply",
      "detail": "Create & alter the resources",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "apply",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "play",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "terraform init",
      "detail": "Initialize Terraform providers",
      "type": "shell",
      "command": "terraform",
      "args": [
        "init"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "runOptions": {
        "instanceLimit": 1
      },
      "icon": {
        "id": "chevron-up",
        "color": "terminal.ansiYellow"
      }
    },
    {
      "label": "terraform plan",
      "detail": "Initialize Terraform providers",
      "type": "shell",
      "command": "scripts/terraform.sh",
      "args": [
        "plan",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "checklist",
        "color": "terminal.ansiYellow"
      },
      "runOptions": {
        "instanceLimit": 1,
      }
    },
  ],
  "inputs": [
    {
      "id": "modName",
      "description": "Go module name for the tests folder",
      "type": "promptString"
    },
    {
      "id": "resources",
      "description": "Input Kubernetes resources you would like to watch",
      "default": "po svc ing",
      "type": "promptString"
    }
  ]
}
